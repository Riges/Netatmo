<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <LangVersion>latest</LangVersion>
        <ImplicitUsings>enable</ImplicitUsings>
        <IsPackable>true</IsPackable>
    </PropertyGroup>
    <PropertyGroup>
        <Version>2.0.0</Version>
        <PackageId>Netatmo</PackageId>
        <Authors>Luc FASQUELLE</Authors>
        <Description>Client for Netatmo api</Description>
        <PackageProjectUrl>https://github.com/Riges/Netatmo</PackageProjectUrl>
        <PackageTags>Netatmo;Home Automation;</PackageTags>
        <PackageProjectUrl>https://github.com/Riges/Netatmo</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/Riges/Netatmo.git</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>
    <PropertyGroup>
        <EnableNETAnalyzers>True</EnableNETAnalyzers>
        <CodeAnalysisTreatWarningsAsErrors>True</CodeAnalysisTreatWarningsAsErrors>
        <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
        <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Flurl.Http" />
        <PackageReference Include="NodaTime"/>
        <PackageReference Include="NodaTime.Serialization.JsonNet"/>
    </ItemGroup>

    <ItemGroup>
        <None Include="../../README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>
</Project>
